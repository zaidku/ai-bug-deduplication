# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/bug_deduplication

# AI/ML Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
SIMILARITY_THRESHOLD=0.85
LOW_CONFIDENCE_THRESHOLD=0.70
VECTOR_DIMENSION=384

# FAISS Configuration
FAISS_INDEX_PATH=/data/faiss_index
INDEX_REBUILD_SCHEDULE=0 2 * * *

# Jira Configuration
JIRA_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-jira-email@company.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=BUG

# Test Platform (TP) Configuration
TP_API_URL=https://tp.company.com/api
TP_API_KEY=your-tp-api-key
TP_PROJECT_ID=your-project-id

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Quality Rules
MIN_DESCRIPTION_LENGTH=50
REQUIRE_REPRO_STEPS=true
REQUIRE_LOGS=false

# Region Configuration
CROSS_REGION_ENABLED=true
SUPPORTED_REGIONS=US,EU,APAC

# Monitoring
ENABLE_PROMETHEUS=true
LOG_LEVEL=INFO
